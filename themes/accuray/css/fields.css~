/*
 * Field types
 */

.field /* Wrapper for any CCK field. */ {
}

.field-type-datetime /* Always use "datetime" when creating new CCK date fields. "date" and "datestamp" are legacy types. */ {
}

.field-type-filefield /* Field from filefield module */ {
}

.field-type-nodereference {
}

.field-type-number-decimal {
}

.field-type-number-float {
}

.field-type-number-integer {
}

.field-type-text {
}

.field-type-userreference {
}


/*
 * Named fields
 */

.field-field-FIELDNAME /* Underscores in field name are replaced with dashes. */ {
}


/*
 * ND / DS fields
 */ 
.field-title /* make paragraph titles like h3s */ {
  font-size: 1.1em;
  font-weight: normal;
  line-height: 1.3em;
  margin-top: 0.909em; /* Equivalent to 1em in the page's base font: 1 / 1.1 = 0.909 */
  margin-bottom: 0.909em;
  color: #407fbc; 
}

.field-title a {
  color: #004964;
  text-decoration: underline;
}

.field-date {
  font-weight: bold;
  margin-top: 0.15em;
}

.field-field-product-terms ul {
  margin: 0;
  padding: 0;
}

.field-field-product-terms ul li {
